<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dip">

    <ImageView
        android:id="@+id/fragment_main_item_thumb"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="10dip"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/article_thumb"/>

    <TextView
        android:id="@+id/fragment_main_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="13dip"
        android:paddingBottom="3dip"
        android:layout_toEndOf="@id/fragment_main_item_thumb"
        />

    <TextView
        android:id="@+id/fragment_main_item_published_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:paddingEnd="5dip"
        android:paddingTop="13dip"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/fragment_main_item_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_below="@id/fragment_main_item_category"
        android:layout_toEndOf="@id/fragment_main_item_thumb"
        android:background="@drawable/border_view"
        android:paddingBottom="10dip"
        />

</RelativeLayout>